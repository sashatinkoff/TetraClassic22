<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.DayNight.Dialog" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.SubTitle</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.SubTitle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>