<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.DayNight.Dialog" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="HintStyle"></style>

    <style name="InputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="endIconDrawable">@drawable/ic_plus</item>
        <item name="endIconMode">custom</item>
        <item name="startIconDrawable">@drawable/ic_minus</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
</resources>