<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            app:layout_constraintTop_toTopOf="parent"
            app:trackColor="?colorSurfaceVariant"
            app:trackCornerRadius="4dp"
            app:trackThickness="4dp" />

        <TextView
            android:id="@+id/textView"
            style="?textAppearanceLabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            tools:text="0/2" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayout"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:suffixText=".pdf">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of pdf file"
                android:text="Diary" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/checkboxSaveHashTagsInFile"
            app:layout_constraintTop_toBottomOf="@id/inputLayout">

            <TextView
                android:id="@+id/contentTextView"
                style="?attr/textAppearanceBodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello world" />

        </androidx.core.widget.NestedScrollView>

        <CheckBox
            android:id="@+id/checkboxSaveHashTagsInFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="Save hashtags in file"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/checkboxAlreadyHaveHashtagsPost" />

        <CheckBox
            android:id="@+id/checkboxAlreadyHaveHashtagsPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="I already have hashtags post"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/checkboxHashTagsMoreOne" />

        <CheckBox
            android:id="@+id/checkboxHashTagsMoreOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="More then one hashtag"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/checkboxHashTagsWithCounter" />

        <CheckBox
            android:id="@+id/checkboxHashTagsWithCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="Hash tags with counters"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/buttonHashTags" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonHashTags"
            style="?materialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="18dp"
            android:text="Create hashtags"
            app:elevation="16dp"
            app:layout_constraintBottom_toTopOf="@id/button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="?materialButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="18dp"
            android:text="Create pdf"
            app:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>