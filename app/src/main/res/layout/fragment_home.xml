<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#FFF"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="22001sdfsd" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/statusTextView">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:autoLink="all"
                    android:scrollbars="vertical"
                    android:textColor="#FFF"
                    android:visibility="visible"
                    tools:text="Hello world" />

            </FrameLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="button, buttonLiveJournalJson,buttonLiveinternet, buttonSaveLjToJson, buttonPdf, buttonLoadImages, buttonStop"
            app:flow_horizontalAlign="start"
            app:flow_horizontalBias="0"
            app:flow_verticalBias="0"
            app:flow_verticalGap="8dp"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Livejournal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSaveLjToJson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert DB to json" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLiveJournalJson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert LJ json to DB" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLiveinternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert LI json to DB" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLoadImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorSecondaryContainer"
            android:text="Load images" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorSecondaryContainer"
            android:text="Create PDF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?colorError"
            android:text="Stop" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>